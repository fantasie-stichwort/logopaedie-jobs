---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import Team from '../components/Team.astro';
import Testimonials from '../components/Testimonials.astro';
import FAQ from '../components/FAQ.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';

const pageTitle = "Logopädie-Praxis Duisburg | Individuelle Therapien für Kinder & Erwachsene";
const pageDescription = "Spezialisierte Logopädie-Therapie in Duisburg. Wir bieten individuelle Behandlung für Sprachentwicklung, Stimmstörungen, Schluckstörungen und mehr. 20+ Jahre Erfahrung.";
---

<Layout title={pageTitle} description={pageDescription}>
  <Navigation />
  <main>
    <Hero />
    <Services />
    <Team />
    <Testimonials />
    <FAQ />
    <Contact />
  </main>
  <Footer />
</Layout>