---
// src/components/QuickApply.astro
---
<section id="apply" class="py-24 bg-slate-900 text-white rounded-[3rem] mx-6 my-12 overflow-hidden relative">
  <div class="max-w-4xl mx-auto px-6 relative z-10">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-5xl font-bold mb-4">Lust auf einen Kaffee? ☕</h2>
      <p class="text-slate-400 text-lg">In 30 Sekunden zum ersten Kennenlernen.</p>
    </div>

    <div class="bg-white/5 border border-white/10 p-8 rounded-[2rem] backdrop-blur-xl">
      
      <div id="step-1" class="apply-step space-y-8">
        <h3 class="text-2xl font-semibold text-center">Bist du bereits fertige Logopädin?</h3>
        <div class="grid sm:grid-cols-2 gap-4">
          <button onclick="nextStep(1, 'Staatlich geprüfte Logopädin')" class="p-6 border border-white/20 rounded-2xl hover:bg-simsek-green transition-all font-bold cursor-pointer">Ja, geprüft</button>
          <button onclick="nextStep(1, 'In Ausbildung')" class="p-6 border border-white/20 rounded-2xl hover:bg-white/10 transition-all font-bold cursor-pointer">In Ausbildung</button>
        </div>
      </div>

      <div id="step-2" class="apply-step hidden space-y-8">
        <h3 class="text-2xl font-semibold text-center">Wann hättest du Zeit?</h3>
        <div class="grid sm:grid-cols-3 gap-4">
          <button onclick="nextStep(2, 'Schnellstmöglich')" class="p-4 border border-white/20 rounded-2xl hover:bg-simsek-green transition-all font-bold cursor-pointer">Sofort</button>
          <button onclick="nextStep(2, 'In 2-3 Monaten')" class="p-4 border border-white/20 rounded-2xl hover:bg-simsek-green transition-all font-bold cursor-pointer">2-3 Monate</button>
          <button onclick="nextStep(2, 'Nur mal umschauen')" class="p-4 border border-white/20 rounded-2xl hover:bg-simsek-green transition-all font-bold cursor-pointer">Nur umschauen</button>
        </div>
      </div>

      <div id="step-3" class="apply-step hidden text-center space-y-8">
        <h3 class="text-3xl font-bold text-simsek-blue mb-4">Fast geschafft!</h3>
        <p class="text-slate-300 mb-6">Wie möchtest du uns kontaktieren?</p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          
          <a id="wa-link" href="#" target="_blank" rel="noopener noreferrer" class="px-8 py-4 bg-simsek-green text-white font-bold rounded-xl no-underline flex items-center justify-center gap-2 hover:bg-[#5bb62e] transition-colors">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L0 24l6.335-1.662c1.72.937 3.672 1.433 5.662 1.434h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
            Per WhatsApp
          </a>

          <a id="mail-link" href="#" class="px-8 py-4 bg-simsek-blue text-white font-bold rounded-xl no-underline flex items-center justify-center gap-2 hover:bg-[#1a7bb5] transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
            Per E-Mail
          </a>

        </div>
      </div>
    </div>
  </div>
</section>

<script is:inline>
let data = { step1: '', step2: '' };

function nextStep(step, val) {
  if(step === 1) data.step1 = val;
  if(step === 2) { data.step2 = val; updateLinks(); }
  
  // Animation/Übergang
  document.getElementById(`step-${step}`).classList.add('hidden');
  document.getElementById(`step-${step+1}`).classList.remove('hidden');
}

function updateLinks() {
  // WICHTIG: Hier steht jetzt die echte Nummer (49 + 203 + 34868690)
  const phone = "4920334868690"; 
  
  const msg = `Hallo Emel! Ich interessiere mich für den Job.\nStatus: ${data.step1}\nZeit: ${data.step2}`;
  
  // Wir nutzen jetzt den direkten API-Link, das ist sicherer als wa.me
  const waLink = document.getElementById('wa-link');
  waLink.href = `https://api.whatsapp.com/send?phone=${phone}&text=${encodeURIComponent(msg)}`;
  
  // E-Mail Link aktualisieren
  document.getElementById('mail-link').href = `mailto:info@logopaedie-simsek.de?subject=Bewerbung&body=${encodeURIComponent(msg)}`;
}
</script>