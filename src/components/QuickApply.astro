---
// QuickApply.astro
---
<section id="apply" class="py-24 bg-slate-900 text-white rounded-[3rem] mx-6 my-12 overflow-hidden relative">
  <div class="max-w-4xl mx-auto px-6 relative z-10">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-5xl font-bold mb-4">Lust auf einen Kaffee? ☕</h2>
      <p class="text-slate-400 text-lg">In 30 Sekunden zum ersten Kennenlernen.</p>
    </div>

    <div class="bg-white/5 border border-white/10 p-8 rounded-[2rem] backdrop-blur-xl">
      <div id="step-1" class="apply-step space-y-8">
        <h3 class="text-2xl font-semibold text-center">Bist du bereits fertige Logopädin?</h3>
        <div class="grid sm:grid-cols-2 gap-4">
          <button onclick="nextStep(1, 'Staatlich geprüfte Logopädin')" class="p-6 border border-white/20 rounded-2xl hover:bg-simsek-green transition-all font-bold cursor-pointer">Ja, geprüft</button>
          <button onclick="nextStep(1, 'In Ausbildung')" class="p-6 border border-white/20 rounded-2xl hover:bg-white/10 transition-all font-bold cursor-pointer">In Ausbildung</button>
        </div>
      </div>

      <div id="step-2" class="apply-step hidden space-y-8">
        <h3 class="text-2xl font-semibold text-center">Wann hättest du Zeit?</h3>
        <div class="grid sm:grid-cols-3 gap-4">
          <button onclick="nextStep(2, 'Schnellstmöglich')" class="p-4 border border-white/20 rounded-2xl hover:bg-simsek-green transition-all font-bold cursor-pointer">Sofort</button>
          <button onclick="nextStep(2, 'In 2-3 Monaten')" class="p-4 border border-white/20 rounded-2xl hover:bg-simsek-green transition-all font-bold cursor-pointer">2-3 Monate</button>
          <button onclick="nextStep(2, 'Nur mal umschauen')" class="p-4 border border-white/20 rounded-2xl hover:bg-simsek-green transition-all font-bold cursor-pointer">Nur umschauen</button>
        </div>
      </div>

      <div id="step-3" class="apply-step hidden text-center space-y-8">
        <h3 class="text-3xl font-bold text-simsek-blue mb-4">Fast geschafft!</h3>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a id="wa-link" href="#" target="_blank" class="px-8 py-4 bg-simsek-green text-white font-bold rounded-xl no-underline">WhatsApp</a>
          <a id="mail-link" href="#" class="px-8 py-4 bg-simsek-blue text-white font-bold rounded-xl no-underline">E-Mail</a>
        </div>
      </div>
    </div>
  </div>
</section>

<script is:inline>
let data = { step1: '', step2: '' };
function nextStep(step, val) {
  if(step === 1) data.step1 = val;
  if(step === 2) { data.step2 = val; updateLinks(); }
  document.getElementById(`step-${step}`).classList.add('hidden');
  document.getElementById(`step-${step+1}`).classList.remove('hidden');
}
function updateLinks() {
  const phone = "49176XXXXXXXX"; // DEINE NUMMER
  const msg = `Hallo Emel! Ich interessiere mich für den Job.\nStatus: ${data.step1}\nZeit: ${data.step2}`;
  document.getElementById('wa-link').href = `https://wa.me/${phone}?text=${encodeURIComponent(msg)}`;
  document.getElementById('mail-link').href = `mailto:info@logopaedie-simsek.de?subject=Bewerbung&body=${encodeURIComponent(msg)}`;
}
</script>