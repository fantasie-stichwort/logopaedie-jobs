---
// src/components/Footer.astro
import Logo from './Logo.astro';
---
<footer class="bg-slate-950 text-white pt-20 pb-10">
  <div class="max-w-7xl mx-auto px-6">
    <div class="grid md:grid-cols-3 gap-16 mb-16 text-left">
      <div class="space-y-6">
        <Logo class="h-10 w-auto" />
        
        <p class="text-slate-400 text-sm">Karriere-Portal der Praxis für Logopädie Şimşek.</p>
      </div>
      <div>
        <h4 class="text-simsek-green font-bold mb-6 uppercase text-xs">Navigation</h4>
        <ul class="space-y-4 text-sm text-slate-400 list-none p-0 font-bold">
          <li><a href="#benefits" class="hover:text-white no-underline">Vorteile</a></li>
          <li><a href="#apply" class="hover:text-white no-underline">Bewerbung</a></li>
          <li><a href="https://logopaedie-simsek.de/impressum" target="_blank" class="hover:text-white no-underline">Impressum</a></li>
        </ul>
      </div>
      <div>
        <h4 class="text-simsek-blue font-bold mb-6 uppercase text-xs font-bold">Standort</h4>
        <p class="text-sm text-slate-400 mb-2">Tonhallenstraße 21, 47051 Duisburg</p>
        <p class="text-xs text-slate-500 mb-4">(3. OG, Aufzug vorhanden)</p>
        <a href="mailto:info@logopaedie-simsek.de" class="text-sm text-simsek-green font-bold no-underline">info@logopaedie-simsek.de</a>
      </div>
    </div>
    <div class="pt-8 border-t border-slate-900 flex justify-between text-[10px] uppercase font-bold text-slate-600">
      <p>© {new Date().getFullYear()} Praxis für Logopädie Şimşek</p>
      <div class="flex gap-4">
        <a href="https://logopaedie-simsek.de/datenschutz" target="_blank" class="no-underline">Datenschutz</a>
        <span>Duisburg Hbf</span>
      </div>
    </div>
  </div>
</footer>